<!-- CONTACT -->
<section id="contact">
    <h2 class="mt-4 mb-4" id="contact-h2">Get in touch</h2>
    <div id="contactFormContent">
        <form id="contact-form" onsubmit="return submitForm()" name="contactForm">
            <label for="fromName">Name<span class="required">*</span></label>
            <input type="text" class="form-control mb-4" id="fromName" placeholder="Enter your name" required min="1" max="300" >
            <label for="email">Email address<span class="required">*</span></label>
            <input type="email" class="form-control mb-4" id="email" placeholder="Enter your email address" min="1" max="300" required>
            <label for="message">Message<span class="required">*</span></label>
            <textarea required id="message" class="form-control mb-4" placeholder="Enter your message" required></textarea>
            <button type="submit" id="message-button" class="btn btn-primary mb-5 mt-1" required min="1">Send message</button>
        </form>
    </div>
</section>